<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_checked="true"
        android:color="@color/color_login" >

        <layer-list>

            <item android:top="49dp">

                <shape android:shape="rectangle" >
                    <solid android:color="@color/color_login" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" >
        <layer-list>

            <item android:top="49dp">

                <shape android:shape="rectangle" >
                    <solid android:color="@color/color_share" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@color/transparent" android:color="#9f9f9f"></item>

</selector>
